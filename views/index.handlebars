
<div className = 'header'>
  <h1>Tripper</h1>
  <p>Explore the world</p>
</div>

<a href="/addTrip" class= "addTrip" type="click"><button>Add a Trip</button></a>

<a href="/{{this.id}}"><button>Sort Trips by Rating</button></a>

<!-- Pass in data from tripper_db -->
<ul>
  {{#each trip}}
  	<li>
      <h3><span class="label">Destination:</span><span id='destination'>{{this.dest_name}}</span></h3>
      <p>{{this.posted_by}} <span class="label">Wrote:</span></p>
      <p><span class="label">Description:</span> {{this.dest_summary}}</p>
      <p><span class="label">Rating:</span> {{this.dest_rating}}</p>
  	</li>

      <div id="image">

      </div>
    

  {{/each}}
</ul>


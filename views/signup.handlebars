<div id="registrationHeader">
    <h2>Please register in order to add a trip!</h3>
    <h2><a href="/login">If you already have an account, Log-in here!</a></h3>
</div>

<form class="signup">
    <div class="form-group">
        <label class="label" for="username">Username</label>
        <input class="label" type="text" class="form-control" id="signupUsername" placeholder="Username">
    </div>
    <div class="form-group">
        <label class="label" for="password">Password</label>
        <input class="label" type="password" class="form-control" id="signupPassword" placeholder="Password">
    </div>
    <button type="submit" id="signup_submit" class="btn btn-default">Sign Up</button>
</form>
<script src="/assets/js/signup.js" type=""></script>
